{
  "expo": {
    "name": "StrainSpotter",
    "slug": "strainspotter",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#121212"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.strainspotter.app",
      "infoPlist": {
        "NSCameraUsageDescription": "StrainSpotter needs camera access to scan cannabis strains",
        "NSPhotoLibraryUsageDescription": "StrainSpotter needs photo library access to select images for scanning"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#121212"
      },
      "package": "com.strainspotter.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow StrainSpotter to access your camera to scan cannabis strains"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow StrainSpotter to access your photos to select images for scanning"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#7CB342",
          "sounds": []
        }
      ],
      "expo-sqlite"
    ],
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#7CB342",
      "androidMode": "default",
      "androidCollapsedTitle": "StrainSpotter"
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
